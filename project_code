#inporting random definitions
import random
char = "RPS"
#defining rock paper scissor game
def rock(player,computer):
    if player == "R" and computer == "P":
        print("computer won")
    elif player == "R" and computer == "S":
        print("You won")
    elif player == "P" and computer == "R":
        print("You won")
    elif player == "P" and computer == "S":
        print("computer won")
    elif player == "S" and computer == "P":
        print("You won")
    elif player == "S" and computer == "P":
        print("computer won")
    elif player == computer:
        print("tie")
    elif player not in char:
        print("You chose another character")
        print("Your game is ending")
        quit()
#defining tellquestion for fortune teller
def tellques():
        question = input("What is your question: \n")
        print("Thinking....")
        print("\n")
        print ("I have the answer to your question of, ", question)
        print(random.choice(tellanswer()))
#dictionary for tell answer
tellanswer = {"It is certain", "Yes", "All signs point to yes", "Without a doubt", "Yes, definitely",
              "You may rely on it", "Most Likely", "Outlook looks good", "Ask again later",
              "Better not tell you now", "Cannot predict now", "Concentrate and ask again",
              "Don't count on it", "No", "Outlook not so good", "Outlook is hazy, try again"}
#Mad Lib story
lib = "On Friday, {0} was arrested in {1} for shoplifting. When the police responded they found him {2}. When asked why he had stolen {3}, {0} explained that he needed them for his {4}. Police took him to {5} and held him until his trial. At his trial he called the judge a {6}. The judge sentenced him to {7} days in jail. After his sentence, {0} return to {8}. He tried to turn his life around and became a {9}. Eventually he fell back into his ways of crime and was arrested for {10}. The {0} spent the rest of his life in jail"


